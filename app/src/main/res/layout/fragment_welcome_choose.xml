<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <!-- Volunteer Card -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/volunteer_card"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="20dp"
            android:layout_marginBottom="10dp">

            <!-- Three Tiles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:src="@drawable/tools"
                    android:layout_margin="9dp"
                    android:padding="4dp"
                    android:layout_gravity="center"/>

                <cz.josefkorbel.enable.util.MontRegTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:textColor="@color/edittext_text"
                    android:gravity="center"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:text="I want to built a 3D prosthetic device for someone"/>

                <!-- Gray Spacer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/inactive_gray"/>

                <cz.josefkorbel.enable.util.MontRegTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Select"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!-- Recipient Card -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Three Tiles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:src="@drawable/float_icon"
                        android:layout_margin="9dp"
                        android:padding="4dp"
                        android:layout_gravity="center"/>

                    <cz.josefkorbel.enable.util.MontRegTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="14sp"
                        android:textColor="@color/edittext_text"
                        android:gravity="center"
                        android:layout_marginLeft="53dp"
                        android:layout_marginRight="53dp"
                        android:text="I need a 3D prosthetic hand, arm or a replacement finger"/>

                    <!-- Gray Spacer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/inactive_gray"/>

                    <cz.josefkorbel.enable.util.MontRegTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Select"/>



                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

     </LinearLayout>


    <cz.josefkorbel.enable.util.MontRegTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="@color/text_blue"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="I have account already"
        />


</LinearLayout>